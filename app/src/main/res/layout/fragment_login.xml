<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/yellow"
             tools:context=".LoginFragment" android:id="@+id/login_fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
                android:layout_width="367dp"
                android:layout_height="57dp"
                android:inputType="textPersonName"
                android:text="Username"
                android:ems="10"
                tools:layout_editor_absoluteY="176dp" tools:layout_editor_absoluteX="7dp" android:id="@+id/uname_edit"
                android:hint="Username"/>
        <Button
                android:text="Signup"
                android:layout_width="130dp"
                android:layout_height="53dp" tools:layout_editor_absoluteY="469dp"
                tools:layout_editor_absoluteX="132dp" android:id="@+id/signup_button"/>
        <EditText
                android:layout_width="367dp"
                android:layout_height="57dp"
                android:inputType="textPersonName"
                android:text="Country"
                android:ems="10"
                tools:layout_editor_absoluteY="305dp" tools:layout_editor_absoluteX="14dp"
                android:id="@+id/country_edit"/>
        <EditText
                android:layout_width="367dp"
                android:layout_height="57dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                tools:layout_editor_absoluteY="235dp" tools:layout_editor_absoluteX="10dp" android:id="@+id/email_edit"
                android:text="Email"/>
        <EditText
                android:layout_width="367dp"
                android:layout_height="57dp"
                android:inputType="textPassword"
                android:ems="10"
                tools:layout_editor_absoluteY="376dp" tools:layout_editor_absoluteX="14dp"
                android:id="@+id/password_edit"
                android:text="Password"/>
        <Button
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="26dp"
                tools:layout_editor_absoluteX="306dp" android:id="@+id/login_button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>